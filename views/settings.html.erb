  <main role="main" class="container">
    <form method="POST" action="/settings">
    <div class="card">
      <h4 class="card-header logo_font">SETTINGS</h4>
      <div class="card-body">
        <div class="form-group">
          <label for="airport">Airport</label>
          <select class="form-control" id="airport" name="airport_id">
            <% @airports.each do |airport| %>
              <option value="<%= airport.id %>" <%= @settings.airport_id == airport.id ? "selected" : "" %>><%= airport.name %></option>
            <% end %>
          </select>
        </div>        
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="use_1090dump" name="use_1090dump" <%= @settings.use_1090dump ? "checked" : "" %> />
          <label class="form-check-label" for="use_1090dump">Use 1090dump</label>
        </div>
        <div class="form-group">
          <label for="ip_1090dump">IP Address for 1090dump</label>
          <input type="text" class="form-control" id="ip_1090dump" name="ip_1090dump" value="<%= @settings.ip_1090dump %>" />
        </div>
        <div class="form-group">
          <label for="port_1090dump">Port for 1090dump</label>
          <input type="text" class="form-control" id="port_1090dump" name="port_1090dump" value="<%= @settings.port_1090dump %>" />
        </div>   
        <div class="form-group">
          <label for="port_1090dump">ADS-B Exchange API Key</label>
          <input type="text" class="form-control" id="adsbx_api_key" name="adsbx_api_key" value="<%= @settings.adsbx_api_key %>" />
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
    </form>
  </main>
