<main role="main" class="container">
  <h1 class="logo_font">Airports <a href="/airports/new" class="btn btn-success"><i class="fas fa-plus"></i> Add Airport</a></h1>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Identifier</th>
        <th>Appch Rwy</th>
        <th>Dep Rwy</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.name %></td>
        <td><span class="badge badge-primary"><%= airport.identifier %></span></td>
        <td class="runway_number_font"><%= airport.approach_rwy %></td>
        <td class="runway_number_font"><%= airport.departure_rwy %></td>
        <td><a class="btn btn-block btn-sm btn-link" href="/airports/show/<%=airport.id%>"><i class="fas fa-eye"></i></a></td>
        <td><a class="btn btn-block btn-sm btn-link" href="/airports/edit/<%=airport.id%>"><i class="fas fa-edit"></i></a></a></td>
        <td>
          <form action="/airports/<%= airport.id %>" method="post">
          <input id="hidden" type="hidden" name="_method" value="delete">
          <button type="submit" value="delete" class="btn btn-block btn-sm btn-link"><i class="text-danger fas fa-trash-alt"></i></button>
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>
      